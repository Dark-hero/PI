@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CarService.Models.Account
<!DOCTYPE html>
<html>
<head>
    <title>Смена пароля</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--online_fonts-->
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext"
          rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Dr+Sugiyama&amp;subset=latin-ext" rel="stylesheet">
    <!--//online_fonts-->
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style1.css" type="text/css" media="all" />
</head>
<body>
        <div class="form-w3ls">
            <div id="signin-agile">
                <p align="center" class="signinP">Смена пароля</p>
                <form method="post" asp-action="ResetPassword">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Password" placeholder="Введите пароль" />
                        <br />
                        <input asp-for="Password" placeholder="Повторите пароль" />
                    <div class="form-group">
                        @Html.HiddenFor(a => a.ResetPasswordCode)
                    </div>
                    @if (@ViewBag.Message != null)
                    {
                        <strong>
                            @ViewBag.Message
                        </strong>
                    }
                   <input type="submit" value="Сохранить"  class="sign-in" />
                </form>
            </div>
        </div> 
        <p class="copyright">&copy; 2018 </p>
        <!-- js files -->
        <script src='~/js/jquery-2.2.3.min.js'></script>
        <script src="~/js/index.js"></script>
        <script src="~/js/notify.min.js"></script>
        <script src="~/js/loginValidation.js"></script>
        <!-- /js files -->
</body>
</html>
