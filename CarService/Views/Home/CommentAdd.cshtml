<div class="card card-inner">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <p class="text-secondary text-center">@ViewBag.obj.Date.ToString("dd/MM/yyyy") </p>
            </div>
            <div class="col-md-10">
                <p>
                    <strong>
                        @ViewBag.Name
                    </strong>
                    @for (int i = 0; i < @ViewBag.obj.Score; i++)
                    {
                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                    }
                </p>

                <p>@ViewBag.obj.Comment</p>
            </div>
        </div>
    </div>
</div>