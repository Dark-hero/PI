@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CarService.Models.Account>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Пользователи</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/adminStyle.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Garage 24 Admin</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Admin" asp-action="Index">Главная</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-area="" asp-controller="User" asp-action="Account">Привет, @ViewBag.UserName</a></li>
                    <li><a asp-area="" asp-controller="User" asp-action="Login">Выход</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Пользователи </h1>
                </div>
            </div>
        </div>
    </header>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a asp-area="" asp-controller="Admin" asp-action="Index" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Настройки
                        </a>
                        <a asp-area="" asp-controller="Admin" asp-action="" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Рассылка сообщений </a>
                        <a asp-area="" asp-controller="Admin" asp-action="" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Пользователи <span class="badge">2</span></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Пользователи</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" placeholder="Фильтр пользователей" />
                                </div>
                            </div>
                            <form method="post" asp-action="Index" asp-controller="Admin">
                                <input type="submit" value="Send Message" />
                                @ViewBag.Message
                            </form>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            email
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var mod in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => mod.Email)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/jquery-2.2.3.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>
