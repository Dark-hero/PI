@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CarService.Models.Account>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Администратор</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap.min.css" />
    <script src="~/js/jquery-2.2.3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.maskedinput.js"></script>
    <link href="~/css/adminStyle.css" rel="stylesheet">
    <script src="~/js/Admin.js"></script>
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Гараж 24</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a>@ViewBag.Name_ </a></li>
                    <li><a asp-action="Logout" asp-controller="User"> Выход</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Пользователи </h1>
                    <input id="IdUser" type="hidden" value="@ViewBag.idUser" />

                </div>
            </div>
        </div>
    </header>

    <section id="main">
        <div class="container">

            <div id="myModalSave" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Сохранить</h4>
                        </div>
                        <div class="modal-body">
                            <form class="col-md-12 form-horizontal" id="masterData" name="FormRole">
                                <input id="id_" type="hidden" value="" />
                                <div class="form-group">
                                    <label>Текущая роль: </label> <label id="role_"> </label>
                                </div>
                                <div class="form-group">
                                    <label>Выберите новую роль: </label>
                                    <select id="roleList">
                                        <option value="0">Администратор</option>
                                        <option value="1">Пользователь</option>
                                        <option value="2">Менеджер</option>
                                    </select>
                                </div>
                                <button type="submit" id="btnSave" class="btn btn-success">Сохранить</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Пользователи</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Имя
                                        </th>
                                        <th>
                                            Фамилия
                                        </th>
                                        <th>
                                            Отчество
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Телефон
                                        </th>
                                        <th>
                                            Роль
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $(function () {
            $("#txtPhone").mask("+375(99)999-99-99");
        });
    </script>
</body>
</html>
