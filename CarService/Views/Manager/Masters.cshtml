@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CarService.Models.Masters>

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Clients</title>
    </head>
    <body>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap.min.css" />
        <script src="~/js/jquery-2.2.3.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.maskedinput.js"></script>
        <script src="~/js/Masters.js"></script>
        <link rel="stylesheet" href="~/css/StyleManagerClients.css" />
        <div id="wrapper">
            <div class="overlay"></div>

            <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
                <ul class="nav sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="#">
                            Меню
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Clients">Заявки</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Record">Записи</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Masters">Мастера</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Parts">З\Ч в наличии</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="TypeOfWorks">Типы работ</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Statistic">Статистика</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="Orders">Заказы</a>
                    </li>
                    <li>
                        <a asp-controller="Manager" asp-action="SendEmail">Рассылка</a>
                    </li>
                </ul>
            </nav>

            <div id="page-content-wrapper">
                <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                    <span class="hamb-top"></span>
                    <span class="hamb-middle"></span>
                    <span class="hamb-bottom"></span>
                </button>
                <div class="container">

                    <div id="myModalSave" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Сохранить</h4>
                                </div>
                                <div class="modal-body">
                                    <form class="col-md-12 form-horizontal" id="masterData" name="MastersForm">
                                        <input type="hidden" id="hdEventID" value="0" />
                                        <div class="form-group">
                                            <label>Имя</label>
                                            <input type="text" id="txtName" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Фамилия</label>
                                            <input type="text" id="txtSurname" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Отчество</label>
                                            <input type="text" id="txtPatronymic" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Специальность</label>
                                            <input type="text" id="txtSpecialty" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Уникальный идентификтор паспорта</label>
                                            <input type="text" id="txtPassportID" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>День рождения</label>
                                            <input type="text" id="txtBirthday" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Почтовый индекс</label>
                                            <input type="text" id="txtPostcode" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Город</label>
                                            <input type="text" id="txtCity" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Улица</label>
                                            <input type="text" id="txtStreet" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Номер дома</label>
                                            <input type="text" id="txtNumberHouse" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Номер квартиры</label>
                                            <input type="text" id="txtNumberFlat" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Телефон</label>
                                            <input type="text" id="txtPhone" class="form-control" />
                                        </div>
                                        <button type="submit" id="btnSave" class="btn btn-success">Сохранить</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading main-color-bg">
                                <h3 class="panel-title">Мастера</h3>
                            </div>
                            <div class="panel-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Имя
                                            </th>
                                            <th>
                                                Фамилия
                                            </th>
                                            <th>
                                                Отчество
                                            </th>
                                            <th>
                                                ДР
                                            </th>
                                            <th>
                                                Телефон
                                            </th>
                                            <th>
                                                Дата трудоустройства
                                            </th>
                                            <th>
                                                Работает
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody">
                                    
                                    </tbody>
                                </table>

                                <script>
                                   
                                </script>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                var trigger = $('.hamburger'),
                    overlay = $('.overlay'),
                    isClosed = false;

                trigger.click(function () {
                    hamburger_cross();
                });

                function hamburger_cross() {

                    if (isClosed == true) {
                        overlay.hide();
                        trigger.removeClass('is-open');
                        trigger.addClass('is-closed');
                        isClosed = false;
                    } else {
                        overlay.show();
                        trigger.removeClass('is-closed');
                        trigger.addClass('is-open');
                        isClosed = true;
                    }
                }

                $('[data-toggle="offcanvas"]').click(function () {
                    $('#wrapper').toggleClass('toggled');
                });
            });
        </script>

        <script>
            $(function () {
                $("#txtPhone").mask("+375(99) 999-99-99");
            });
        </script>
    </body>
</html>
